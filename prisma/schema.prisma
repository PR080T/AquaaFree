generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Quote {
  id                Int      @id @default(autoincrement())
  fullName         String
  email            String
  phone            String
  city             String
  companyName      String
  businessType     String
  advertiseContent String @db.Text
  quantity         String
  budget           String
  status           String   @default("PENDING")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
