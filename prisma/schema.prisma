generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Quote {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName          String
  email             String
  phone             String
  city              String
  companyName       String
  businessType      String
  advertisementType String
  quantity          Int
  budget            Float
  status            String   @default("PENDING")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
